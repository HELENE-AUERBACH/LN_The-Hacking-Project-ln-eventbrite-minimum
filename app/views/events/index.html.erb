<style type="text/css">
  table {
    margin:auto;
  }
  table,
  td {
    border: 1px solid #333;
  }

  thead,
  tfoot {
    background-color: #333;
    color: #fff;
  }
</style>

<div>
  <h1>Bienvenue sur l'application "Eventbrite minimal" de <em>"The Hacking Project"</em></h1>
  <BR>
  <% if !notice.nil? %>
    <div class="alert alert-success" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>
  <table>
    <caption>Liste de tous les événements</caption>
    <thead>
      <tr>
        <th>Date de début</th>
        <th>Titre</th>
        <th>Page</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.start_date %></td>
          <td><%= event.title %></td>
          <td><%= link_to "Evénement n°#{event.id}", event_path(event.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
